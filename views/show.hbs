<div class="row d-flex text-center justify-content-center">
  <div class="col-sm-8">
    <h1>Success! Please use this link:</h1>
    <div class="input-group m-1 px-5">
      <input id="shortlUrl" type="text" class="form-control" name="shortlUrl"
        value="http://localhost:3000/{{shortlUrl}}" aria-label="shortlUrl" aria-describedby="basic-addon1" disabled>
    </div>
    <button type="button" onclick="copyFuction()" class="btn btn-outline-info btn-lg">Copy</button>
  </div>
</div>

<script>
  function copyFuction() {
    const copyWord = document.querySelector("#shortlUrl")
    navigator.clipboard.writeText(copyWord.value)
    alert("Copied:" + copyWord.value)
  }
</script>