<form action="/" method="POST">
  <div class="row d-flex text-center justify-content-center">
    <div class="col-sm-8">
      <div class="input-group m-1 px-5">
        <input type="text" class="form-control" name="inputUrl" value="{{inputUrl}}" placeholder="Input URL here"
          aria-label="originalUrl" aria-describedby="basic-addon1">
      </div>
      <div>
        {{#if inputUrl}}
        <div id="inputUrlHelp" class="form-text">Please input correct link.</div>
        {{/if}}
      </div>
      <button type="submit" class="btn btn-outline-success btn-lg">Shortener</button>
    </div>
  </div>
</form>